<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SwipeDownTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ScrollableTheme" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <!--RewardContent Dialog Style-->
    <style name="CustomDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="CardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="fab">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorBlack</item>
    </style>
</resources>
